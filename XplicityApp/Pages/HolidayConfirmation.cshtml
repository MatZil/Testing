@page
@model XplicityApp.Pages.HolidayConfirmationModel

@{
    ViewData["Title"] = "Holiday Confirmation";
    var imagePath = Url.Content("http://127.0.0.1:10000/devstoreaccount1/images/requestConfirmed.png");
    var styleSheetPath = Url.Content("http://127.0.0.1:10000/devstoreaccount1/stylesheets/holidayConfirmation.css");
    var styleSheetGlobalPath = Url.Content("http://127.0.0.1:10000/devstoreaccount1/stylesheets/global.css");
}

    <html>
    <head>
        <link href=@styleSheetPath rel="stylesheet" type="text/css" />
        <link href=@styleSheetGlobalPath rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="center">
            <img src=@imagePath height="125" width="140" />
            <p><font size="4"><b>@Model.RequesterName</b> is requesting a holiday from <b>@Model.HolidayFrom.ToString("yyyy-MM-dd")</b> to <b>@Model.HolidayTo.ToString("yyyy-MM-dd")</b></font></p>

            <div>
                <form method="post">
                    <input asp-for="@Model.HolidayId" name="holidayId" hidden>
                    <input asp-for="@Model.ConfirmerId" name="confirmerId" hidden>
                    <input asp-for="@Model.IsConfirmerAdmin" name="isConfirmerAdmin" hidden>

                    <button class="buttonConfirm" type="submit" asp-route-confirm="true">Confirm</button>
                    <button class="buttonReject" type="submit" asp-route-confirm="false">Reject</button>

                    <p>If you are rejecting this request, please provide the reason:</p>
                    <input name="rejectionReason" />
                </form>
            </div>
        </div>
    </body>
    </html>


